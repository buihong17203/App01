<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:orientation="vertical">

        <EditText
            android:id="@+id/edt_input"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="75dp"/>

        <EditText
            android:id="@+id/edt_output"
            android:layout_width="match_parent"
            android:layout_height="75dp"/>
        <EditText
            android:id="@+id/mainhinh"
            android:layout_width="match_parent"
            android:layout_height="75dp"/>

        <LinearLayout
            android:layout_gravity="center"
            android:layout_width="360dp"
            android:layout_marginTop="25dp"
            android:layout_marginBottom="25dp"
            android:layout_height="250dp"
            android:orientation="horizontal">

            <LinearLayout

                android:layout_width="90dp"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <Button
                    android:id="@+id/bt_xoahet"
                    android:layout_width="90dp"
                    android:layout_height="50dp"
                    android:text="AC"
                    android:textSize="25sp"/>

                <Button
                    android:id="@+id/bt7"
                    android:layout_width="90dp"
                    android:layout_height="50dp"
                    android:text="7"
                    android:textSize="25sp"/>

                <Button
                    android:id="@+id/bt4"
                    android:layout_width="90dp"
                    android:layout_height="50dp"
                    android:text="4"
                    android:textSize="25sp"/>

                <Button
                    android:id="@+id/bt1"
                    android:layout_width="90dp"
                    android:layout_height="50dp"
                    android:text="1"
                    android:textSize="25sp"/>

                <Button
                    android:id="@+id/bt_exit"
                    android:layout_width="90dp"
                    android:layout_height="50dp"
                    android:text="Exit"
                    android:textSize="20sp"/>

            </LinearLayout>



            <LinearLayout
                android:layout_width="90dp"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <Button
                android:id="@+id/bt_"
                android:layout_width="90dp"
                android:layout_height="50dp"
                android:text=""
                android:textSize="25sp"/>

                <Button
                    android:id="@+id/bt8"
                    android:layout_width="90dp"
                    android:layout_height="50dp"
                    android:text="8"
                    android:textSize="25sp"/>

                <Button
                    android:id="@+id/bt5"
                    android:layout_width="90dp"
                    android:layout_height="50dp"
                    android:text="5"
                    android:textSize="25sp"/>

                <Button
                    android:id="@+id/bt2"
                    android:layout_width="90dp"
                    android:layout_height="50dp"
                    android:text="2"
                    android:textSize="25sp"/>

                <Button
                    android:id="@+id/bt0"
                    android:layout_width="90dp"
                    android:layout_height="50dp"
                    android:text="0"
                    android:textSize="25sp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="90dp"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <Button
                    android:id="@+id/bt___"
                    android:layout_width="90dp"
                    android:layout_height="50dp"
                    android:text=""
                    android:textSize="25sp"/>

                <Button
                    android:id="@+id/bt9"
                    android:layout_width="90dp"
                    android:layout_height="50dp"
                    android:text="9"
                    android:textSize="25sp"/>

                <Button
                    android:id="@+id/bt6"
                    android:layout_width="90dp"
                    android:layout_height="50dp"
                    android:text="6"
                    android:textSize="25sp"/>

                <Button
                    android:id="@+id/bt3"
                    android:layout_width="90dp"
                    android:layout_height="50dp"
                    android:text="3"
                    android:textSize="25sp"/>

                <Button
                    android:id="@+id/bt_phay"
                    android:layout_width="90dp"
                    android:layout_height="50dp"
                    android:text="."
                    android:textSize="25sp"
                    android:textStyle="bold"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="90dp"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <Button
                    android:id="@+id/bt_chia"
                    android:layout_width="90dp"
                    android:layout_height="50dp"
                    android:text="/"
                    android:textSize="25sp"/>

                <Button
                    android:id="@+id/bt_nhan"
                    android:layout_width="90dp"
                    android:layout_height="50dp"
                    android:text="x"
                    android:textSize="25sp"/>

                <Button
                    android:id="@+id/bt_tru"
                    android:layout_width="90dp"
                    android:layout_height="50dp"
                    android:text="-"
                    android:textSize="25sp"/>

                <Button
                    android:id="@+id/bt_cong"
                    android:layout_width="90dp"
                    android:layout_height="50dp"
                    android:text="+"
                    android:textSize="25sp"/>

                <Button
                    android:id="@+id/bt_bang"
                    android:layout_width="90dp"
                    android:layout_height="50dp"
                    android:text="="
                    android:textSize="25sp"/>
            </LinearLayout>

        </LinearLayout>



    </LinearLayout>

</RelativeLayout>